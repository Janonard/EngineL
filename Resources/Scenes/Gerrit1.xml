<scene>
    <text>"Hallo Ivy!"</text>
    <delay time="1500" />
    <text>"Hallo Gerrit! Ich hab dieses Fundstück gefunden!"</text>
    <delay time="2000" />
    <text>"Lass mal sehen"</text>
    <delay time="1500" />
    <transfer subject="mysteriöses Fundstück" target="None" />
    <delay time="3000" />
    <text>"Das ist ein altes Windrad! Damit kannst du Strom erzeugen!"</text>
    <delay time="3000" />
    <text>"..."</text>
    <spawn class="BrokenWindTurbine" target="Ivy" />
    <changeState subject="Gers Haus" state="gave broken turbine" value="1" />
</scene>